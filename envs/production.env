# Kite Services - Production (port 8179, VM)
ENVIRONMENT=production
SERVICE_PORT=8179
SERVICE_HOST=0.0.0.0
DEBUG=false
ENABLE_DOCS=true
LOG_LEVEL=INFO

# Kite Connect (token file created if missing; mount: kite-credentials -> /root/.kite-services)
KITE_TOKEN_FILE=/root/.kite-services/kite_token.json

# Service
SERVICE_NAME=kite-services
SERVICE_VERSION=1.0.0
SERVICE_WORKERS=4

# Redis
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5

# Database (Docker: /tmp or /app/data)
DATABASE_URL=sqlite+aiosqlite:////tmp/kite_services_prod.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Rate limit
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# CORS
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Quotes configuration (max symbols per request)
QUOTES_MAX_SYMBOLS=200

# Market breadth configuration
MARKET_BREADTH_ENABLED=true
MARKET_BREADTH_CACHE_TTL=60

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/kite_services.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Monitoring
METRICS_ENABLED=true
PROMETHEUS_PORT=8180
HEALTH_CHECK_ENABLED=true
