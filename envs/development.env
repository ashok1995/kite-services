# Kite Services - Development (port 8079)
ENVIRONMENT=development
SERVICE_PORT=8079
SERVICE_HOST=0.0.0.0
DEBUG=true
LOG_LEVEL=INFO

# Kite Connect (api_key, api_secret, access_token in ~/.kite-services/kite_token.json)
KITE_TOKEN_FILE=~/.kite-services/kite_token.json
KITE_RECONNECT_INTERVAL=30
KITE_MAX_RECONNECT_ATTEMPTS=5

# Yahoo Finance
YAHOO_API_KEY=
YAHOO_BASE_URL=https://query1.finance.yahoo.com
YAHOO_TIMEOUT=30
YAHOO_RATE_LIMIT=100

# Service
SERVICE_NAME=kite-services
SERVICE_VERSION=1.0.0
SERVICE_WORKERS=1

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/kite_services.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# CORS / Rate limit
CORS_ORIGINS=["*"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=logs/kite_services.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# Monitoring
MONITORING_ENABLED=true
PROMETHEUS_PORT=8081
